# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Database Configuration
DB_HOST=your-database-host.com
DB_PORT=3306
DB_NAME=your_database_name
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password
DB_URL=jdbc:mysql://your-database-host.com:3306/your_database_name?useSSL=true&serverTimezone=UTC

# Docker Hub (for CI/CD)
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_token

# Render Deploy Hook
RENDER_DEPLOY_HOOK_URL=https://api.render.com/deploy/srv-xxxxx
